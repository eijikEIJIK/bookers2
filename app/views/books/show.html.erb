<div class="row">
  <div class="col-md-4">
    <%= render 'users/user_info', user: @book.user %>
    <hr>
    <%= render 'books/new', book_new: @book_new %>
    </div>
  <div class="col-md-8">
    <h2>Book detail</h2>
    <table>
      <tr>
        <td>
          <%= link_to user_path(@book.id) do %>
            <%= image_tag @book.user.get_profile_image %><br>
            <%= @book.user.name %>
          <% end %><br>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <p><%= @book.title %></p>
          <% end %>
        </td>
        <td>
          <p><%= @book.body %></p>
        </td>
        <% if @book.user == current_user %>
        <td>
          <%= link_to "編集", edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to "削除", book_path(@book), method: :delete %>
        </td>
        <% end %>
      </tr>
    </table>
  </div>
</div>