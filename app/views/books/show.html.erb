<hr>
<%= render 'users/user_info' %>
<hr>
<%= render 'bookss/new', book_new: @book_new %>
<hr>
<div>
  <p>Title：<%= @book.title %></p>
  <p>Option：<%= @book.body %></p>
  <p>Name：<%= @book.user.name %></p>
  <p>Date：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "編集", edit_book_path(@book.id) %>
    <%= link_to "削除", book_path(@book), method: :delete %>
  <% end %>
</div>