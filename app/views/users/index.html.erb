<div class="row">
  <div class="col-md-4">
  <%= render 'users/user_info', user: current_user %>
  <hr>
  <%= render 'books/new', book_new: @book_new %>
  </div>
  <div class="col-md-8">
    <h2>Users</h2>
    <table>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image %>
          <% end %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to "show", user_path(user.id) %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
