<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image %>
  <table class="table">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <% if user == current_user %>
    <%= link_to edit_user_path(current_user.id) do %>
      <button type="button" class="btn btn-secondary btn-lg btn-block">edit</button>
    <% end %>
  <% end %>
</div>