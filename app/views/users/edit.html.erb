<div class="container">
<%= render 'books/errors', error: @user %>
<h2>User info</h2>
<div class="form-group">
  <%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, class:"form-control", autofocus: true, id:"inputName", placeholder:"name"%>
  <br>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, class:"form-control-file" ,placeholder: "profile image", accept: "image/*" %>
  <br>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, class:"form-control", autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
  <br>
  <%= f.submit "Update User" ,class:"btn btn-secondary" %>
<% end %>
</div>
</div>
